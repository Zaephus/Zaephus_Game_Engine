                "${workspaceFolder}/**",
                "${config:glfw}/include",
                "${config:glm}/**",
                "${config:stb_image}/**",
                "${VULKAN_SDK}/Include/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.19041.0",
            "compilerPath": "${config:g++}/gcc.exe",
            "cStandard": "c17",
            "cppStandard": "c++23",
            "intelliSenseMode": "windows-gcc-x64",
            "browse": {
                "path": [
                    "${config:glfw}/include",
                    "${config:glm}/**",
                    "${config:stb_image}/**",
                    "${VULKAN_SDK}/Include/**"
                ]
            }
        }
    ],
    "version": 4,
    "enableConfigurationSquiggles": true
